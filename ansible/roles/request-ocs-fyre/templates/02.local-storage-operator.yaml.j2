apiVersion: v1
kind: Namespace
metadata:
  name: {{ localstore_namespace.stdout }}
---
apiVersion: operators.coreos.com/v1
kind: OperatorGroup
metadata:
  namespace: {{ localstore_namespace.stdout }}
  name: local-storage
spec:
  targetNamespaces:
  - local-storage
---
apiVersion: operators.coreos.com/v1alpha1
kind: Subscription
metadata:
  name: local-storage-operator
  namespace: {{ localstore_namespace.stdout }}
spec:
  channel: "{{ localstore_version.stdout }}"
  installPlanApproval: Automatic
  name: local-storage-operator
  source: redhat-operators
  sourceNamespace: openshift-marketplace
